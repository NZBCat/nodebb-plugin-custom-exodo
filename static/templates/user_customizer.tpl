<h4>General</h4>
<div class="form-group">
	<div class='row'>
		<div class='col-lg-2'>
			<label for="brand-color-input">Links</label>
			<input type="color" value="{brand_color}" class="form-control" id="brand-color-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Highlighted links</label>
			<input type="color" value="{hover_link}" class="form-control" id="hover-link-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Text</label>
			<input type="color" value="{text_color}" class="form-control" id="text-color-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Alternative text</label>
			<input type="color" value="{alternative_color}" class="form-control" id="alternative-color-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Forum Background</label>
			<input type="color" value="{background_foro}" class="form-control" id="background-foro-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Well Background</label>
			<input type="color" value="{background_well}" class="form-control" id="background-well-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Menu Background</label>
			<input type="color" value="{background_dropdown}" class="form-control" id="background-dropdown-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Menu Foreground</label>
			<input type="color" value="{dropdown_color}" class="form-control" id="dropdown-color-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Pagination Foreground</label>
			<input type="color" value="{pagination_color}" class="form-control" id="pagination-color-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Pagination Background</label>
			<input type="color" value="{background_pagination}" class="form-control" id="background-pagination-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Label Background</label>
			<input type="color" value="{tag_color1}" class="form-control" id="tag-color1-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Label Background 2</label>
			<input type="color" value="{tag_color2}" class="form-control" id="tag-color2-input" placeholder="Ex. #FFFFFF">
		</div>

		<div class='col-lg-3'>
			<label for="brand-color-input">Font (<a href="http://www.w3schools.com/cssref/css_websafe_fonts.asp" target="_blank">+ Info</a>)</label>
			<input type="text" value="{font_family}" class="form-control" id="font-family-input" placeholder="Ex. arial">
		</div>
		<div class='col-lg-3'>
			<label for="brand-color2-input">Title Color</label>
			<input type="color" value="{brand_color2}" class="form-control" id="brand-color2-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-3'>
			<label for="brand-color2-input">Title Color 2</label>
			<input type="color" value="{brand_color3}" class="form-control" id="brand-color3-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-3'>
			<label for="brand-color-input">Chat/Notification Background</label>
			<input type="color" value="{background_modal}" class="form-control" id="background-modal-input" placeholder="Ex. #FFFFFF">
		</div>
	</div>
</div>
<hr>
<h4>Thread List</h4>
<div class="form-group">
	<div class="row">
		<div class='col-lg-2'>
			<label for="brand-color-input">List Background</label>
			<input type="color" value="{background_postlist}" class="form-control" id="background-postlist-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">List Foreground</label>
			<input type="color" value="{list_color}" class="form-control" id="list-color-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Unread List Foreground</label>
			<input type="color" value="{unreadlist_color}" class="form-control" id="unreadlist-color-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">List Foreground 2</label>
			<input type="color" value="{list_color2}" class="form-control" id="list-color2-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Alternative Text Foreground</label>
			<input type="color" value="{smalllist_color}" class="form-control" id="smalllist-color-input" placeholder="Ex. #FFFFFF">
		</div>
		<div class='col-lg-2'>
			<label for="brand-color-input">Border Color</label>
			<input type="color" value="{border_topiclist}" class="form-control" id="border-topiclist-input" placeholder="Ex. #FFFFFF">
		</div>


		<!--<div class='col-lg-2'>
			<label for="brand-color-input">Tama√±o de letra</label>
